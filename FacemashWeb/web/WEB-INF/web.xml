<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <listener>
        <description>A simple session listener</description>
        <listener-class>web.utils.SessionListener</listener-class>
    </listener>
    


    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>picture</servlet-name>
        <servlet-class>web.view.servlet.picture</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>authorisation</servlet-name>
        <servlet-class>web.view.servlet.authorisation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>picture</servlet-name>
        <url-pattern>/picture</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>authorisation</servlet-name>
        <url-pattern>/authorisation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>500</error-code>
        <location>/faces/authorisation</location>
    </error-page>
</web-app>
